{% extends "::base.html.twig" %}

{% block title %}AppBundle:Post:show{% endblock %}

{% block body %}
<div class="panel panel-success">
	<div class="panel-heading">
		<h3 class="panel-title">{{post.title}}</h3>
	</div>
	<div class="panel-body">
	<div class="pull-right">{{post.createdAt|date('jS F, Y') }}</div>
		{{post.content}}
	</div>
	<div class="btns">
		<a href="{{ path('remove_post', {'post': post.id }) }}" class="btn btn-danger">Remove</a>
		<a href="{{ path('update_post', {'post': post.id }) }}" class="btn btn-warning">Update</a>
		
	</div>
</div>

{% endblock %}
